<form action="/admin/login" method="post" id="formulario2">
    <div class="mb-3" style="margin:100px;">
        <div class="col-auto">
            <label for="usuario" class="form-label"><br>USUARIO</label>
            <input type="text" class="form-control" id="usuario" aria-describedby="emailHelp" name="usuario">

        </div>
    </div>
    <div class="mb-3" style="margin:100px;">
        <div class="col-auto">
            <label for="password" class="form-label">PASSWORD</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>
    </div>
    <div class="mb-3" style="margin:100px;">
        <div class="col-auto">
            <button type="submit" class="btn btn-dark">ENVIAR</button>
        </div>
    </div>
    <br>
</form>
{{#if error}}
<p style="text-align: center;"><strong>USUARIO O PASSWORD INCORRECTO!</strong></p>
{{/if}}
