<div class="container agrnov" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3 nov">
            <h4 id="mod">Modificar una nueva novedad</h4>
            <br>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <br>
                <div class="form-group">
                    <label for="">Título</label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div><br>
                <div class="form-group">
                    <label for="">Subtítulo</label>
                    <input type="text" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}">
                </div><br>
                <div class="form-group">
                    <p>
                        <label>Imagen: </label>
                        <input type="file" class="form-control" name="imagen" id="imagen">
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">
                            Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>
                <div class="form-group">
                    <label for="">Cuerpo</label>
                    <textarea name="cuerpo" class="form-control">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-marron" id="marron">Modificar</button>
            </form>
            {{#if error}}
            <h5 id="me">{{message}}</h5>
            {{/if}}
        </div>
    </div>

</div>

